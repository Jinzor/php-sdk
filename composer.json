{
  "name": "shoppingfeed/php-sdk",
  "license": "Apache-2.0",
  "minimum-stability": "alpha",
  "require": {
    "php": ">= 5.6",
    "guzzlehttp/guzzle": "^6.3",
    "shoppingfeed/php-feed-generator": "1.0.0-alpha.1"
  },
  "autoload": {
    "psr-4": {
      "ShoppingFeed\\Sdk\\": "src/"
    }
  },
  "suggest": {
    "psr/log": "trace HTTP requests performed by the SDK"
  },
  "require-dev": {
    "monolog/monolog": "^1.23",
    "phpunit/phpunit": "^5.0",
    "squizlabs/php_codesniffer": "^2.8"
  },
  "scripts": {
    "test": [
      "@php vendor/bin/phpcs --standard=PSR2 src",
      "@php vendor/bin/phpunit"
    ]
  },
  "scripts-descriptions": {
    "test" : "Run PHPUnit tests suites and Coding standards validator"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/shoppingflux/hal-client"
    }
  ]
}
